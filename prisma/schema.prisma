generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())

  email     String    @unique
  password  String?

  name      String
  picture   String?

  isVerified Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  level     Level @default(BRONZE) 
  role      Role      @default(USER)
  points    Points[]
  answers   QuizAnswer[]

  method    AuthMethod
  accounts  Account[]
  sessions  Token[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id       String   @id @default(uuid())
  userId            String @map("user_id")
  provider          String
  providerAccountId String @map("provider_account_id")
  access_token      String?
  refresh_token     String?
  expires_at        Int?
  token_type        String?
  scope             String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

   user User @relation(fields: [userId],references: [id],onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Token {
  id       String   @id @default(uuid())
  sessionToken String @unique @map("session_token")
  type         TokenType
  userId       String @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
  @@map("token")
}

model Points {
  id         Int      @id @default(autoincrement())
  userId     String                    @map("user_id")
  value      Int
  reason     String?
  answerId   String                    @map("answer_id")
  createdAt  DateTime @default(now())  @map("created_at")

  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  answer QuizAnswer @relation(fields: [answerId], references: [id], onDelete: Cascade)

  @@map("points")
}


model QuizCategory {
  id       String          @id @default(uuid())
  name     String          @unique
  questions QuizQuestion[]
  @@map("quiz_category")
}

model QuizQuestion {
  id         String       @id @default(uuid())
  question   String
  options    Json         
  answer     String           
  level      QuestionLevel
  timer      Int

  categoryId String       @map("category_id")
  category   QuizCategory @relation(fields: [categoryId], references: [id])

  answers    QuizAnswer[]
  @@map("quiz_questions")
}

model QuizAnswer {
  id          String   @id @default(uuid())
  userId      String                      @map("user_id")
  questionId  String                      @map("question_id")
  selected    String
  isCorrect   Boolean                     @map("is_correct")
  createdAt   DateTime @default(now())    @map("created_at")

  points      Points[]

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
}


enum Role {
  USER 
  ADMIN
  OWNER
}

enum Level {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  ELITE
}

enum QuestionLevel {
  EASY
  MEDIUM
  HARD
}

enum AuthMethod {
CREDENTIALS
GOOGLE
GITHUB
}

enum TokenType {
  VERIFICATION
  TWO_FACTOR
  PASSWORD_RESET
}