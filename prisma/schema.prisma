generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())

  email    String  @unique
  password String?

  name    String
  picture String?

  isVerified         Boolean @default(false) @map("is_verified")
  isTwoFactorEnabled Boolean @default(false) @map("is_two_factor_enabled")

  level   Level        @default(BRONZE)
  role    Role         @default(USER)
  points  Points[]
  answers QuizAnswer[]

  method           AuthMethod
  accounts         Account[]
  sessions         Token[]
  quizParticipants QuizParticipant[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  provider          String
  providerAccountId String   @map("provider_account_id")
  access_token      String?
  refresh_token     String?
  expires_at        Int?
  token_type        String?
  scope             String?
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Token {
  id           String    @id @default(uuid())
  sessionToken String    @unique @map("session_token")
  type         TokenType
  userId       String    @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("token")
}

model Points {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  sessionId String   @map("session_id")
  answerId  String   @map("answer_id")
  value     Int
  reason    String?
  createdAt DateTime @default(now()) @map("created_at")

  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  answer  QuizAnswer  @relation(fields: [answerId], references: [id], onDelete: Cascade)
  session QuizSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("points")
}

model QuizCategory {
  id        String         @id @default(uuid())
  name      String         @unique
  level     QuestionLevel
  questions QuizQuestion[]
  sessions  QuizSession[]

  @@map("quiz_category")
}

model QuizQuestion {
  id        String        @id @default(uuid())
  question  String
  options   Json
  answer    String
  level     QuestionLevel
  timer     Int
  maxPoints Int

  categoryId String       @map("category_id")
  category   QuizCategory @relation(fields: [categoryId], references: [id])

  answers          QuizAnswer[]
  sessionQuestions SessionQuestion[]

  @@map("quiz_questions")
}

model QuizSession {
  id         String        @id @default(uuid())
  code       String?        @unique
  qrCode     String?
  categoryId String        @map("category_id")
  questionCount Int?

  mode        SessionMode
  level      QuestionLevel
  status     QuizStatus    @default(WAITING)

  startedAt DateTime?
  endedAt   DateTime?
  createdAt DateTime  @default(now())

  category     QuizCategory      @relation(fields: [categoryId], references: [id])
  participants QuizParticipant[]
  questions    SessionQuestion[]
  answers      QuizAnswer[]
  points       Points[]
}

model QuizParticipant {
  id        String @id @default(uuid())
  userId    String
  sessionId String
  score     Int    @default(0)

  role      ParticipantRole @default(USER)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  session QuizSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionId])
}

model SessionQuestion {
  id         String   @id @default(uuid())
  sessionId  String
  questionId String
  startedAt  DateTime?

  session  QuizSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([sessionId, questionId])
}

model QuizAnswer {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  questionId String   @map("question_id")
  sessionId  String   @map("session_id")
  selected   String?
  isCorrect  Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  question QuizQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  session  QuizSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  points   Points[]

  @@unique([userId, questionId, sessionId])
}

enum QuizStatus {
  WAITING // room ачылган, бирок старт жок
  ACTIVE // суроолор кетип жатат
  FINISHED // quiz бүттү
  CANCELED // админ токтотту
}

enum ParticipantRole {
  ADMIN
  USER
}

enum Role {
  USER
  ELITE
  OWNER
}

enum SessionMode {
  SOLO
  LOBBY
}

enum Level {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  ELITE
}

enum QuestionLevel {
  EASY
  MEDIUM
  HARD
}

enum AuthMethod {
  CREDENTIALS
  GOOGLE
  GITHUB
}

enum TokenType {
  VERIFICATION
  TWO_FACTOR
  PASSWORD_RESET
}
